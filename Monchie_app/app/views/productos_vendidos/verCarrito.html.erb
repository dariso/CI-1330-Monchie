<%- model_class = ProductosVendido -%>
<div class="page-header">
  <h1>Carrito</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:cantidad) %></th>
      <th><%= model_class.human_attribute_name(:especificaciones) %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%if @productos_vendidos.present?%>
    <% @productos_vendidos.each do |productos_vendido| %>
      <tr>
        <td><%= productos_vendido.producto.nombre %></td>
        <td><%= productos_vendido.cantidad %></td>
        <td><%= show_non_blank_field productos_vendido.especificaciones %></td>


        <td>
          <%= link_to "Editar",
                      edit_productos_vendido_path(productos_vendido), :class => 'btn btn-mini' %>
          <%= link_to "Eliminar",
                      productos_vendido_path(productos_vendido),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <%end%>
    <%end%>


  </tbody>
  <tfoot>
  <tr>
    <td><%= link_to "AtrÃ¡s",
                productos_selProductos_path, :class => 'btn'  %></td>
  </tr>
  </tfoot>
</table>



