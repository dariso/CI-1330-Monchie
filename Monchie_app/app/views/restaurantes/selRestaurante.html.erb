<h1>Por Favor Seleccione Su Restaurante</h1>

<table class="table table-striped">

  <thead>
  <tr>
    <th>Nombre</th>
    <th>Telefono</th>
    <th>Distrito</th>
    <th>Direccion</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @restaurantes.each do |restaurante| %>
      <tr>
        <td id = "texto"><%= link_to restaurante.nombre, ordens_crearOCargarOrden_path(restauranteUser_id: restaurante.user_id)%></td>
        <td id = "texto"><%=  restaurante.telefonos.first.telefono %></td>
        <td id = "texto"><%= restaurante.distrito %></td>
        <td id = "texto"><%= restaurante.direccion %></td>
      </tr>
  <% end %>
  </tbody>

</table>

