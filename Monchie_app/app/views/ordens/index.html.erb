<%- model_class = Orden -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:modoretiro) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:restaurante_id)%></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ordens.each do |orden| %>
      <tr>
        <td><%= link_to orden.id, orden_path(orden) %></td>
        <td><%=l orden.created_at %></td>
        <td><%= orden.user_id %></td>
        <td><%= orden.modoretiro %></td>
        <td><%= orden.estado %></td>
        <td><%= Restaurante.find(orden.restaurante_id).nombre%></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_orden_path(orden), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      orden_path(orden),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_orden_path,
            :class => 'btn btn-primary' %>
