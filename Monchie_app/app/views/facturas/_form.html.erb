<%= form_for @factura, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :total, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :orden_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :orden_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                facturas_path, :class => 'btn' %>
    
  </div>
<% end %>
